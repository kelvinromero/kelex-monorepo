<p style="color: green"><%= notice %></p>

<div class="row mt-5">
  <div class="col">
    <h1>Episodes</h1>
  </div>

  <div class="col-2 d-inline-flex p-2">
    <%= link_to "New Episode",
                new_user_podcast_episode_path ,
                class: 'btn btn-primary w-100',
                role: "button"
    %>
  </div>
</div>

<hr class="my-5">

<div class="row">
  <div class="col">
    <div id="episodes" class="list-group">
      <% @episodes.each do |episode| %>
        <a href="<%= user_podcast_episode_path(@user, @podcast, episode) %>" class="list-group-item">
          <%= episode.title %>
        </a>
      <% end %>
    </div>
  </div>
</div>
